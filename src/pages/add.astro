---
import Layout from "../layouts/Layout.astro";
import FlashcardForm from "../components/add/FlashcardForm";
---

<Layout title="Add Flashcard - 10x Flashcards">
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-3xl font-bold mb-6">Add New Flashcard</h1>
      <p class="text-gray-600 mb-8">
        Create a new flashcard by entering the content for the front and back of the card.
      </p>

      <FlashcardForm client:load />
    </div>
  </main>
</Layout>
