---
import Layout from "../layouts/Layout.astro";
import LearnContainer from "../components/learn/LearnContainer";
import { LearnErrorBoundary } from "../components/learn/LearnErrorBoundary";
---

<Layout title="Learn - 10x Flashcards">
  <main class="container mx-auto px-4 py-8">
    <div class="flex flex-col items-center gap-6">
      <h1 class="text-4xl font-bold tracking-tight">Learn</h1>
      <p class="text-muted-foreground text-center max-w-2xl">
        Review your flashcards using spaced repetition to enhance your learning experience.
      </p>
      <LearnErrorBoundary client:load>
        <LearnContainer client:load />
      </LearnErrorBoundary>
    </div>
  </main>
</Layout>
